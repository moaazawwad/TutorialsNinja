<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="TutorialsNinja _ Sprint 2" parallel="false">
    <parameter name="browsername" value=""/>

    <!-- Test 1: Select Categories -->
    <test name="Category Selection Test">
        <classes>
            <class name="testCases.TC06_SelectCategories">
                <methods>
                    <include name="testHoverAndOpenCategory_P"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Test 2: Add to Shopping Cart -->
    <test name="add different products to Shopping cart">
